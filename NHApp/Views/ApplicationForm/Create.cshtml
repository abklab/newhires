    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Previous Employer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="PreviousEmployersModalBody">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!--Drivers License Modal-->
<div class="modal fade" id="DriversLicenseModal" tabindex="-1" role="dialog" aria-labelledby="DriversLicenseModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <span class="h4">Driver's License</span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="DrivingLicense" name="DrivingLicense">
                    <input name="__RequestVerificationToken" type="hidden" value="f39JIJmSTBaz0VxfSVj2B8ZPK_hevxuGEpmkgZADPQqtC6rkp1i9TzLhaM-JLyj-9XIIL56WDH4vE539W-NmxyNB81KvA8XAUpe5yJdSy801">

                    <div class="row">
                        <div class="col-md">
                            <div class="input-field">
                                <label class="control-label " for="DL_Number">License Number</label>

                                <input class="form-control text-uppercase" id="DL_Number" name="DL_Number" type="text" value="" maxlength="16">
                                <span class="field-validation-valid text-danger" data-valmsg-for="DL_Number" data-valmsg-replace="true"></span>

                            </div>
                        </div>
                        <div class="col-md">
                            <div class="input-field">
                                <label class="control-label " for="DL_ExpirationDate">Expiration Date</label>

                                <input class="form-control dateFormat" data-val="true" data-val-date="Provide a valid expiration date."
                                       data-val-required="Provide a valid expiration date." id="DL_ExpirationDate" name="DL_ExpirationDate" type="text" value="">
                                <span class="field-validation-valid text-danger" data-valmsg-for="DL_ExpirationDate" data-valmsg-replace="true"></span>

                            </div>

                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md">
                            <div class="input-field">
                                @*<label for="DL_Type" class="container">License State</label>*@
                                <select id="DL_State" name="DL_State" class="form-control" required>
                                    <option selected disabled>Select State</option>
                                </select>

                                <span class="field-validation-valid text-danger" data-valmsg-for="DL_State" data-valmsg-replace="true"></span>

                            </div>
                        </div>
                        <div class="col-md">
                            <div class="input-field">
                                @*<label for="DL_Type">License Type</label>*@
                                <select class="form-control " id="DL_Type" name="DL_Type">
                                    <option selected disabled>Select Type</option>
                                    <option value="Chauffeur">Chauffeur</option>
                                    <option value="CDL">Commercial-CDL</option>
                                    <option value="Operator">Operator</option>

                                </select>
                                <span class="field-validation-valid text-danger" data-valmsg-for="DL_Type" data-valmsg-replace="true"></span>

                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md">
                            <div class="input-field">
                                <label class="control-label " for="Notes">Notes</label>
                                <input class="form-control " id="Notes" name="Notes" type="text" value="" rows="2" />
                                <span class="field-validation-valid text-danger" data-valmsg-for="Notes" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-secondary btn-sm " data-dismiss="modal" value="Close" />
                <input type="button" class="btn btn-success  btn-sm" value="Save" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


    <script src="~/appjs/applicationform.js"></script>

}
